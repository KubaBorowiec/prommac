article(class="post post-{{post.id}}")
		header
				div(class="clearfix")
					div(class="pull-left")
						| Data:
						span {{post.date}}
				h2 {{ post.title}}
		div(class="image-post")
			img(ng-src="img/posts/{{post.src}}" alt="{{post.slug}}")
		div(ng-bind-html="content" class="content margin-top-20")
		footer
			div(class="row")
				div(class="col-sm-4")
					a(ng-show="vsBefore" ng-href="#/news/{{before}}")
						|	{{ before }}
				div(class="col-sm-4 text-center")
					a(class="up" href="#/news") Powrót do aktualności
				div(class="col-sm-4 text-right")
					a(ng-show="vsAfter" ng-href="#/news/{{after}}")
						|	{{ after }}


